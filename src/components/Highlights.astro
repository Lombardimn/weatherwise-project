<article class="section highlights" aria-labelledby="highlights-label" data-highlights>
  <div class="card card-lg">
    <h2 class="title-2 mb-3" id ="highlight-label">Lo destacado de Hoy</h2>
    <div class="highlight-list grid gap-5">
      <div class="card card-sm highlight-card one">
        <h3 class="title-3 text-on-surface-variant-color mb-5">Índice de Calidad de Aire</h3>
        <div class="wrapper flex justify-between gap-4 items-center">
          <img
            src="/public/icons/wind/wind-good.svg"
            alt="cielo limpio"
            width="40"
            height="40"
            class="weather-icon"
          >

          <ul class="card-list flex items-center flex-wrap">
            <li class="card-item flex items-center w-1/2 justify-end gap-1">
              <p class="title-1">23.3</p>
              <p class="title-1">PM<sub>2.5</sub></p>
            </li>

            <li class="card-item flex items-center w-1/2 justify-end gap-1">
              <p class="title-1">23.3</p>
              <p class="title-1">PM<sub>2.5</sub></p>
            </li>

            <li class="card-item flex items-center w-1/2 justify-end gap-1">
              <p class="title-1">23.3</p>
              <p class="title-1">PM<sub>2.5</sub></p>
            </li>

            <li class="card-item flex items-center w-1/2 justify-end gap-1">
              <p class="title-1">23.3</p>
              <p class="title-1">PM<sub>2.5</sub></p>
            </li>
          </ul>
        </div>

        <span class="badge aqi-1 label-1 text-on-surface-variant-color absolute top-4 right-4 py-2 px-12 rounded-3xl font-semiBold cursor-help" title="AQI Mensaje">
          Bueno
        </span>

      </div>

      <div class="card card-sm highlight-card two flex flex-col justify-between">
        <h3 class="title-3 mb-6">Amanecer & Atardecer</h3>
        <div class="card-list flex items-center content-center">
            <div class="card-item flex items-center w-1/2 justify-center flex-wrap gap-x-8 gap-y-16">
              <img
                src="/public/icons/weather/sunrise.svg"
                alt="amanecer"
                width="40"
                height="40"
                class="m-icon m-1"
              >

              <div>
                <p class="label-1 text-on-surface-variant-color mb-1">Amanecer</p>
                <p class="title-1">06.30 AM</p>
              </div>
            </div>

            <div class="card-item flex items-center w-1/2 justify-center flex-wrap gap-x-8 gap-y-16">
              <img
                src="/public/icons/weather/night.svg"
                alt="amanecer"
                width="40"
                height="40"
                class="m-icon m-1"
              >

              <div>
                <p class="label-1 text-on-surface-variant-color mb-1">Atardecer</p>
                <p class="title-1">17.54 PM</p>
              </div>
            </div>
        </div>
      </div>

      <div class="card card-sm highlight-card">
        <h3 class="title-3">Humedad</h3>
        <div class="wrapper flex justify-between gap-4 items-center">
          <img
            src="/public/icons/weather/humidity.svg"
            alt="porcentaje de humedad"
            width="24"
            height="24"
            class="weather-icon m-3"
          >

          <p class="title-1">35<sub>%</sub></p>
        </div>
      </div>

      <div class="card card-sm highlight-card">
        <h3 class="title-3">Presión</h3>
        <div class="wrapper flex justify-between gap-4 items-center">
          <img
            src="/public/icons/weather/pressure.svg"
            alt="valores de presión"
            width="24"
            height="24"
            class="weather-icon m-3"
          >

          <p class="title-1">1052<sub>hPa</sub></p>
        </div>
      </div>

      <div class="card card-sm highlight-card">
        <h3 class="title-3">Visibilidad</h3>
        <div class="wrapper flex justify-between gap-4 items-center">
          <img
            src="/public/icons/weather/visibility.svg"
            alt="visibilidad"
            width="24"
            height="24"
            class="weather-icon m-3"
          >

          <p class="title-1">10<sub>Km</sub></p>
        </div>
      </div>

      <div class="card card-sm highlight-card">
        <h3 class="title-3">Sensación térmica</h3>
        <div class="wrapper flex justify-between gap-4 items-center">
          <img
            src="/public/icons/weather/thermostat.svg"
            alt="sensación climática"
            width="24"
            height="24"
            class="weather-icon m-3"
          >

          <p class="title-1">25&deg;<sup>C</sup></p>
        </div>
      </div>
    </div>
  </div>
</article>


<style>
  .highlights .card-sm {
    background-color: var(--black-alpha-10);
    position: relative;
  }

  .badge.aqi-1 {
    background-color: var(--bg-aqi-1-color);
    color: var(--on-bg-aqi-1-color);
  }

  .badge.aqi-2 {
    background-color: var(--bg-aqi-2-color);
