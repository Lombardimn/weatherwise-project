---
import MainHead from '../components/MainHead.astro';
import Navbar from '../components/Navbar.astro'

interface Props {
	title: string;
	description?: string | undefined;
}

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<MainHead title={title} description={description} />
	</head>
	<body>
		<div id="app" class="relative h-screen p-8 gap-14 before:content-[''] before:fixed before:left-0 before:bottom-0 before:w-full before:h-10 bg-gradient">
			<header class="[grid-area:header] header">
				<Navbar />
			</header>
			<slot />
		</div>
	</body>
</html>

<style>
 #app {
	display: grid;
	grid-template-areas:
		"header header header"
		"aside main main"
		"footer footer footer";
	grid-template-columns: 300px 1fr 1fr;
	grid-template-rows: auto 1fr 1fr;
	overflow-y: auto;
 }

 #app:-webkit-scrollbar-thumb {
    background-color: transparent;
  }

	#app:is(:hover, :focus-within)::-webkit-scrollbar-thumb {
    background-color: var(--white-alpha-8);
  }

  #app::-webkit-scrollbar-button {
    height: var(--h-062);
  }

  #app::before {
    background-image: var(--gradient-1);
    pointer-events: none;
    z-index: 1;
  }
</style>

